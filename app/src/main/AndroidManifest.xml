<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nstick.raihanyuwono.n_stick">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".Multiplayer" android:screenOrientation="portrait"/>
        <activity android:name=".Setting" android:screenOrientation="portrait"/>
        <activity android:name=".SinglePlayer" android:screenOrientation="portrait"/>
        <activity android:name=".MainMenu" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>